generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id                 Int               @id @default(autoincrement())
  email              String            @unique
  password           String
  role               Role              @default(USER)
  displayName        String?
  location           String?
  paceMin            Float?
  paceMax            Float?
  preferredDistanceKm Float?
  terrainPreference  TerrainPreference?
  experienceLevel    ExperienceLevel?  @default(BEGINNER)
  bio                String?
  daysAvailable      String[]          @default([])
  prefersMorning     Boolean           @default(false)
  prefersAfternoon   Boolean           @default(false)
  prefersEvening     Boolean           @default(false)
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model Location {
  id      Int    @id @default(autoincrement())
  lat     Float
  lng     Float
  routeId Int?
  route   Route? @relation(fields: [routeId], references: [id])
}

model Route {
  id           Int        @id @default(autoincrement())
  name         String
  distanceKm   Float
  distanceMile Float
  colorr       Int
  colorg       Int
  colorb       Int
  path         Location[]
}

model Run {
  id         Int    @id @default(autoincrement())
  location   String
  distance   Int
  pace       String
  difficulty String
}

model Award {
  id        Int    @id @default(autoincrement())
  title     String
  icon      String
  description String
  unlocked  Boolean @default(false)
  userEmail String
}


enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum TerrainPreference {
  FLAT
  HILLS
  MIXED
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}
