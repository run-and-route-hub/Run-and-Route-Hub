generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  password        String
  role            Role             @default(USER)
  
  // Profile
  name            String?
  username        String?          @unique
  bio             String?
  avatarUrl       String?
  location        String?
  joinedDate      DateTime         @default(now())
  experienceLevel ExperienceLevel  @default(BEGINNER)
  
  // Running stats
  totalMilesMonth Float            @default(0)
  totalRunsMonth  Int              @default(0)
  avgPace         String?          
  fastestMile     String?          
  streakDays      Int              @default(0)
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model Location {
  id      Int    @id @default(autoincrement())
  lat     Float
  lng     Float
  routeId Int?
  route   Route? @relation(fields: [routeId], references: [id])
}

model Route {
  id           Int        @id @default(autoincrement())
  name         String
  distanceKm   Float
  distanceMile Float
  colorr       Int
  colorg       Int
  colorb       Int
  path         Location[]
}

model Run {
  id         Int    @id @default(autoincrement())
  location   String
  distance   Int
  pace       String
  difficulty String
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}